<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Image Gallery</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
</head>
<body>
		<div class="container">
			<div class="jumbotron">
				<h1>Galleria !</h1>
				<p>Cute Puppies Image Gallery</p>
			</div>
			<% for (var i=0; i<items.length; i++) { 
				if((i+1)%3==0){ %>
					<div class="row">
							<%	} %>
						  <div class="col-sm-6 col-md-4">
						    <div class="thumbnail" style="width:270px; height:320px; overflow:auto">
						      <img src=<%= items[i].Link %> alt="150x150" style="width:250px; height:250px">
						      <div class="caption">
						        <p>   </p>
						        <p><a href="/upvote?val=<%= items[i].Link %>" class="btn btn-primary" role="button">Up Vote | <%= items[i].Upvote %></a> <a href="/downvote?val=<%= items[i].Link %>" class="btn btn-warning" role="button">Down Vote | <%= items[i].Downvote %></a></p>
						      </div>
						    </div>
						  </div>
				<%	if((i+1)%3==0){ %>
				   	</div>
				 <%	} %>
			<% } %>
		</div>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script src="bower_components/bootstrap/dist/js/bootstrap.js"></script>
</body>
</html>
